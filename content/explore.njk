---js
const eleventyNavigation = {
	key: "eventos",
	order: 2
};
---
<section class="hero-section">
	<div class="container">
		<h1>Eventos</h1>
		<p>Todos os eventos e experiências em São Paulo</p>
	</div>
</section>

<section class="explore-section">
	<div class="container">
		{% if collections.events and collections.events.length > 0 %}
		<div class="event-list">
		{%- for event in collections.events | reverse %}
			<a href="{{ event.url }}" class="event-list-item{% if event.url == url %} event-list-item-active{% endif %}">
				<div class="event-list-image" style="background-image: url('{{ event.data.heroImage }}')"></div>
				<div class="event-list-info">
					<h3 class="event-list-title">{% if event.data.title %}{{ event.data.title }}{% else %}<code>{{ event.url }}</code>{% endif %}</h3>
					<time class="event-list-date" datetime="{{ event.date | htmlDateString }}">{{ event.date | readableDate("dd 'de' MMMM, yyyy") }}</time>
					{% if event.data.location %}
					<span class="event-list-location">{{ event.data.location }}</span>
					{% endif %}
				</div>
			</a>
		{%- endfor %}
		</div>
		{% else %}
		<p>Nenhum evento encontrado no momento.</p>
		{% endif %}
	</div>
</section>
