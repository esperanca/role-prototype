---js
const eleventyNavigation = {
	key: "página inicial",
	order: 1
};
---
<section class="hero-section">
	<div class="container">
		<h1>Acontecendo Agora</h1>
		<p>Descubra os melhores eventos e experiências da sua cidade. Sempre cabe mais um!</p>
	</div>
</section>

<section class="explore-section">
	<h2>Explore</h2>
	<div class="event-cards">
		{%- set eventsList = (collections.events | filterFutureEvents | reverse).slice(0, 8) -%}
		{%- for event in eventsList %}
		<a href="{{ event.url }}" class="event-card">
			<div class="event-card-image" style="background-image: url('{{ event.data.heroImage }}')"></div>
			<div class="event-card-content">
				<p class="event-date">{{ event.data.date | readableDate }}</p>
				<h3>{{ event.data.title }}</h3>
			</div>
		</a>
		{%- endfor %}
	</div>

	<div class="view-all-events">
		<a href="/explore/" class="view-all-button">Ver todos os eventos</a>
	</div>
</section>
